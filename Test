package com.finalproject.internMgmtSystem.repository;

import com.finalproject.internMgmtSystem.model.Attendance;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.*;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.jdbc.core.RowMapper;

import java.sql.Date;
import java.util.Arrays;
import java.util.List;

import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.*;

public class AttendanceDaoImplTest {

    @Mock
    private JdbcTemplate jdbcTemplate;

    @InjectMocks
    private AttendanceDaoImpl attendanceDao;

    private Attendance attendance;

    @BeforeEach
    void setUp() {
        MockitoAnnotations.openMocks(this);

        attendance = new Attendance();
        attendance.setAttendanceId(1L);  // FIXED
        attendance.setUserId(1L);        // FIXED
        attendance.setBatchCode(1L);     // FIXED
        attendance.setDate(Date.valueOf("2025-01-01"));
        attendance.setPresent(true);
    }

    // ---------------- SAVE ----------------
    @Test
    void testSave() {
        when(jdbcTemplate.update(anyString(), any(), any(), any(), any()))
                .thenReturn(1);

        when(jdbcTemplate.queryForObject(eq("SELECT LAST_INSERT_ID()"), eq(Long.class)))
                .thenReturn(1L);

        Attendance saved = attendanceDao.save(attendance);

        assertNotNull(saved);
        assertEquals(1L, saved.getAttendanceId());
        assertEquals(1L, saved.getUserId());
    }

    // --------------- FIND BY USER + DATE ----------------
    @Test
    void testFindByUserIdAndDate_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L), eq(attendance.getDate())))
                .thenReturn(Arrays.asList(attendance));

        Attendance result = attendanceDao.findByUserIdAndDate(1L, attendance.getDate());

        assertNotNull(result);
        assertEquals(1L, result.getUserId());
    }

    @Test
    void testFindByUserIdAndDate_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L), eq(attendance.getDate())))
                .thenReturn(Arrays.asList());

        Attendance result = attendanceDao.findByUserIdAndDate(1L, attendance.getDate());

        assertNull(result);
    }

    // ---------------- FIND BY USER ID ----------------
    @Test
    void testFindByUserId_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList(attendance, attendance));

        List<Attendance> list = attendanceDao.findByUserId(1L);

        assertEquals(2, list.size());
    }

    @Test
    void testFindByUserId_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList());

        List<Attendance> list = attendanceDao.findByUserId(1L);

        assertTrue(list.isEmpty());
    }

    // ---------------- FIND BY BATCH CODE ----------------
    @Test
    void testFindByBatchCode_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList(attendance));

        List<Attendance> list = attendanceDao.findByBatchCode(1L);

        assertEquals(1, list.size());
        assertEquals(1L, list.get(0).getBatchCode());
    }

    @Test
    void testFindByBatchCode_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList());

        List<Attendance> list = attendanceDao.findByBatchCode(1L);

        assertTrue(list.isEmpty());
    }

    // ---------------- UPDATE ----------------
    @Test
    void testUpdate() {
        when(jdbcTemplate.update(anyString(), any(), any()))
                .thenReturn(1);

        assertDoesNotThrow(() -> attendanceDao.update(attendance));
    }

    // ---------------- DELETE ----------------
    @Test
    void testDelete() {
        when(jdbcTemplate.update(anyString(), eq(1L)))
                .thenReturn(1);

        assertDoesNotThrow(() -> attendanceDao.delete(1L));
    }
}


package com.finalproject.internMgmtSystem.repository;

import com.finalproject.internMgmtSystem.model.Feedback;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.*;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.jdbc.core.RowMapper;

import java.sql.Timestamp;
import java.util.Arrays;
import java.util.List;

import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.*;

public class FeedbackDaoImplTest {

    @Mock
    private JdbcTemplate jdbcTemplate;

    @InjectMocks
    private FeedbackDaoImpl feedbackDao;

    private Feedback feedback;

    @BeforeEach
    void setup() {
        MockitoAnnotations.openMocks(this);

        feedback = new Feedback(
                1L,                      // id
                1L,                      // userId
                "Sravya",               // userName
                1L,                      // batchCode
                "Sravya Kunamneni",     // trainerName
                new Timestamp(System.currentTimeMillis()),
                "Very good",            // feedback
                5                       // rating
        );
    }

    // ------------------------ SAVE ------------------------
    @Test
    void testSave() {
        when(jdbcTemplate.update(anyString(), any(), any(), any(), any(), any(), any()))
                .thenReturn(1);

        when(jdbcTemplate.queryForObject(eq("SELECT LAST_INSERT_ID()"), eq(Long.class)))
                .thenReturn(1L);

        Feedback saved = feedbackDao.save(feedback);

        assertNotNull(saved);
        assertEquals(1L, saved.getId());
        assertEquals("Sravya", saved.getUserName());
    }

    // --------------- FIND BY TRAINER NAME (FOUND) ----------------
    @Test
    void testFindByTrainerName_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq("Sravya Kunamneni")))
                .thenReturn(Arrays.asList(feedback));

        List<Feedback> list = feedbackDao.findByTrainerName("Sravya Kunamneni");

        assertEquals(1, list.size());
        assertEquals("Sravya Kunamneni", list.get(0).getTrainerName());
    }

    // --------------- FIND BY TRAINER NAME (NOT FOUND) ----------------
    @Test
    void testFindByTrainerName_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq("Sravya Kunamneni")))
                .thenReturn(Arrays.asList());

        List<Feedback> list = feedbackDao.findByTrainerName("Sravya Kunamneni");

        assertTrue(list.isEmpty());
    }

    // ---------------- FIND BY USER (FOUND) ----------------
    @Test
    void testFindByUserId_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList(feedback));

        List<Feedback> list = feedbackDao.findByUserId(1L);

        assertEquals(1, list.size());
        assertEquals(1L, list.get(0).getUserId());
    }

    // ---------------- FIND BY USER (NOT FOUND) ----------------
    @Test
    void testFindByUserId_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList());

        List<Feedback> list = feedbackDao.findByUserId(1L);

        assertTrue(list.isEmpty());
    }

    // ---------------- FIND ALL (FOUND) ----------------
    @Test
    void testFindAll_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class)))
                .thenReturn(Arrays.asList(feedback, feedback));

        List<Feedback> list = feedbackDao.findAll();

        assertEquals(2, list.size());
    }

    // ---------------- FIND ALL (EMPTY) ----------------
    @Test
    void testFindAll_Empty() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class)))
                .thenReturn(Arrays.asList());

        List<Feedback> list = feedbackDao.findAll();

        assertTrue(list.isEmpty());
    }
}

package com.finalproject.internMgmtSystem.repository;

import com.finalproject.internMgmtSystem.model.InternshipBatch;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.*;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.jdbc.core.RowMapper;

import java.sql.Date;
import java.util.Arrays;
import java.util.List;

import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.*;

public class BatchDaoImplTest {

    @Mock
    private JdbcTemplate jdbcTemplate;

    @InjectMocks
    private BatchDaoImpl batchDao;

    private InternshipBatch batch;

    @BeforeEach
    void setup() {
        MockitoAnnotations.openMocks(this);

        batch = new InternshipBatch(
                1L,
                "Java Batch",
                "Java Fullstack",
                10L,                              // trainerId
                Date.valueOf("2025-01-01"),
                Date.valueOf("2025-06-01"),
                50,
                45
        );
    }

    // ------------------------- SAVE -------------------------
    @Test
    void testSave() {
        when(jdbcTemplate.update(anyString(), any(), any(), any(), any(), any(), any(), any()))
                .thenReturn(1);

        when(jdbcTemplate.queryForObject(eq("SELECT LAST_INSERT_ID()"), eq(Long.class)))
                .thenReturn(1L);

        InternshipBatch saved = batchDao.save(batch);

        assertNotNull(saved);
        assertEquals(1L, saved.getBatchCode());
        assertEquals("Java Batch", saved.getBatchName());
    }

    // -------------------- FIND BY ID (FOUND) --------------------
    @Test
    void testFindById_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList(batch));

        InternshipBatch result = batchDao.findById(1L);

        assertNotNull(result);
        assertEquals(1L, result.getBatchCode());
    }

    // -------------------- FIND BY ID (NOT FOUND) --------------------
    @Test
    void testFindById_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList());

        InternshipBatch result = batchDao.findById(1L);

        assertNull(result);
    }

    // -------------------- FIND ALL --------------------
    @Test
    void testFindAll() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class)))
                .thenReturn(Arrays.asList(batch, batch));

        List<InternshipBatch> list = batchDao.findAll();

        assertEquals(2, list.size());
    }

    // ---------------- FIND BY TRAINER ID (FOUND) ----------------
    @Test
    void testFindByTrainerId_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(10L)))
                .thenReturn(Arrays.asList(batch));

        List<InternshipBatch> list = batchDao.findByTrainerId(10L);

        assertEquals(1, list.size());
        assertEquals(10L, list.get(0).getTrainerId());
    }

    // ---------------- FIND BY TRAINER ID (NOT FOUND) ----------------
    @Test
    void testFindByTrainerId_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(10L)))
                .thenReturn(Arrays.asList());

        List<InternshipBatch> list = batchDao.findByTrainerId(10L);

        assertTrue(list.isEmpty());
    }

    // -------------------- UPDATE --------------------
    @Test
    void testUpdate() {
        when(jdbcTemplate.update(anyString(), any(), any(), any(), any(), any(), any(), any(), eq(1L)))
                .thenReturn(1);

        assertDoesNotThrow(() -> batchDao.update(batch));
    }

    // -------------------- DELETE --------------------
    @Test
    void testDelete() {
        when(jdbcTemplate.update(anyString(), eq(1L)))
                .thenReturn(1);

        assertDoesNotThrow(() -> batchDao.delete(1L));
    }

    // -------------------- FIND BY NAME (FOUND) --------------------
    @Test
    void testFindByName_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq("Java Batch")))
                .thenReturn(Arrays.asList(batch));

        InternshipBatch result = batchDao.findByName("Java Batch");

        assertNotNull(result);
        assertEquals("Java Batch", result.getBatchName());
    }

    // -------------------- FIND BY NAME (NOT FOUND) --------------------
    @Test
    void testFindByName_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq("Java Batch")))
                .thenReturn(Arrays.asList());

        InternshipBatch result = batchDao.findByName("Java Batch");

        assertNull(result);
    }

    // -------------------- FIND BY BATCH CODE --------------------
    @Test
    void testFindByBatchCode_Found() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList(batch));

        InternshipBatch result = batchDao.findByBatchCode(1L);

        assertNotNull(result);
        assertEquals(1L, result.getBatchCode());
    }

    @Test
    void testFindByBatchCode_NotFound() {
        when(jdbcTemplate.query(anyString(), any(RowMapper.class), eq(1L)))
                .thenReturn(Arrays.asList());

        InternshipBatch result = batchDao.findByBatchCode(1L);

        assertNull(result);
    }

    // -------------------- DECREMENT AVAILABLE SEATS --------------------
    @Test
    void testDecrementAvailableSeats() {
        when(jdbcTemplate.update(anyString(), eq(1L)))
                .thenReturn(1);

        assertDoesNotThrow(() -> batchDao.decrementAvailableSeats(1L));
    }
}

@Test
void testAddTask_Failure() {
    TaskDto dto = new TaskDto(1L, "Work", 1L, "PENDING",
            Date.valueOf("2025-01-10"), "file.pdf");

    when(taskDao.save(any())).thenReturn(null);

    assertThrows(RuntimeException.class,
            () -> trainerService.addTask(dto));
}@Test
void testMarkAttendance_SaveFailed() {
    AttendanceDto dto = new AttendanceDto(
            1L, 1L, Date.valueOf(LocalDate.now()), true
    );

    when(attendanceDao.save(any())).thenReturn(null);

    assertThrows(RuntimeException.class,
            () -> trainerService.markAttendance(dto));
}@Test
void testUpdatePerformance_Failure() {
    PerformanceDto dto = new PerformanceDto(1L, 1L, "Good", 90);

    when(performanceDao.save(any())).thenReturn(null);

    assertThrows(RuntimeException.class,
            () -> trainerService.updatePerformance(dto));
}@Test
void testGetUsersByTrainerId_NotFound() {
    when(userBatchDao.getUsersByTrainerId(1))
            .thenReturn(Collections.emptyList());

    assertThrows(ResourceNotFoundException.class,
            () -> trainerService.getUsersByTrainerId(1));
}
